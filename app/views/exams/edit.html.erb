<div class="exam-container">
  <%= form_for [@category, @exam] do |f| %>
    <h3> General information </h3>

    <div class="form-group">
      <%= f.label :category, "Category" %>
      <%= f.text_field :category, value: @category.name, disabled: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :number_of_questions, "Number of question" %>
      <%= f.number_field :number_of_questions, min: "1", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :time, "Time (min)" %>
      <%= f.number_field :time, min: "1", class: "form-control" %>
    </div>

    <h3>
      Questions list
    </h3>
    <div></div>


    <%= f.fields_for :questions do |x| %>
      <%= render  "question_fields", f: x %>
    <% end %>
    <div></div>
    <%= link_to_add_field( "Add question", f, :questions, class: "add-question") %>


    <div>
      <%= f.submit "Submit", class: "sign-in-btn" %>
    </div>
  <% end %>
</div>
