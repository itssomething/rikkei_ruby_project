<div id="main">
  <div id="top-bar">
    <ul id="top-bar-ul">
      <li class="bars-icon"><a href="#" id="toggle-nav">&#9776</a></li>
      <li><%= current_user.name %></li>
      <li class="float-right"><%= link_to  "Logout", session_path, method: :delete %></li>
      <li class="float-right ava-header">
        <%= link_to user_path(current_user) do %>
          <% if current_user.avatar.present? %>
            <%= image_tag current_user.avatar_url %>
          <% else %>
            <%= image_tag "/default_avatar.jpg", class: "avatar" %>
          <% end %>
        <% end %>
      </li>
      <li></li>
    </ul>
</div>
