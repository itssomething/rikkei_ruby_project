<div class="container">
  <div class="user-home-grid-container">
    <div class="category-container">
      <h2>Categories</h2>
      <% @categories.each do |c| %>
        <h3><%= c.name %></h3>

        <div>
          <% c.exams.each do |e| %>
            <%= link_to tests_path(exam_id: e.id), class: "fancy-card", method: :post do %>
              <div class="exam-name"><%= e.name %></div>
              <div class="fancy-card-overlay">
                <div class="text">Do test >></div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="leaderboard-container">
      <div class="leaderboard-table">
        <h2>Leaderboard</h2>
        <div>
          <table>
            <tr>
              <th>No.</th>
              <th>Name</th>
              <th>Score</th>
              <th>Exam</th>
            </tr>

            <%= render "leaderboards", leaderboards: @leaderboards %>
          </table>
        </div>
        <div>
          <%#= paginate @leaderboards, views_prefix: 'randoms' %>
        </div>
      </div>
    </div>
  </div>
</div>
