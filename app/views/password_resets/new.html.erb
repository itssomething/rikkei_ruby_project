<div class="sign-in-text">Reset password </div>

<%= render "layouts/flash" %>

<%= form_tag password_resets_path, id: "login-form" do %>
  <div class="form-group">
    <%= label_tag :email, "Email" %>
    <%= text_field_tag :email, nil, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= link_to "Back to sign in", new_session_path, class: "forgot-password" %>
  </div>
  <%= submit_tag "Send reset instruction", class: "sign-in-btn" %>
<% end %>
