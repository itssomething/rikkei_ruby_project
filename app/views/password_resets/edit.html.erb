<div class="sign-in-text">Reset password </div>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<%= form_tag password_reset_path, id: "login-form", method: :patch do %>
  <div class="form-group">
    <%= label_tag :password, "Password" %>
    <%= text_field_tag :password, nil, type: "password", class: "form-control", required: true %>
  </div>y

  <div class="form-group">
    <%= label_tag :password_confirmation, "Password confirmation" %>
    <%= text_field_tag :password_confirmation, nil, type: "password", class: "form-control", required: true %>
  </div>

  <%= hidden_field_tag :email, @user.email %>

  <div class="form-group">
    <%= submit_tag "Reset password", class: "sign-in-btn" %>
  </div>
<% end %>
