<div class="sign-in-text">Sign in </div>
<%= render "layouts/flash" %>
<%= form_tag session_path, id: "login-form" do %>
  <div class="form-group">
    <%= label_tag :email, "Email" %>
    <%= text_field_tag :email, nil, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password, nil, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= link_to "Forgot password", new_password_reset_path, class: "forgot-password" %>
    <%= link_to "Signup", new_user_path, class: "forgot-password float-right" %>
  </div>

  <%= submit_tag "Login", class: "sign-in-btn" %>
<% end %>
